---
interface Props {
  image: string;
  logo: string;
  genres: number[];
  content: string;
}
const { image, logo, content, genres } = Astro.props;
---

<header
  class="grid grid-cols-1 grid-rows-1 place-items-center lg:justify-items-start w-full h-[600px]"
>
  <figure class="col-span-full row-span-full w-full h-full">
    <img
      src={`${import.meta.env.PUBLIC_MDB_IMAGE}/original${image}`}
      alt="poster de pelicula"
      class="w-full h-full object-cover object-center opacity-80"
    />
  </figure>
  <section
    class="z-10 col-span-full row-span-full grid gap-4 w-80 lg:w-[420px] h-max lg:ml-52"
  >
    <img src={logo} alt="logo de pelicula" class="w-full mb-4" />
    <h3 class="inline font-bold">{genres}</h3>
    <p class="text-sm font-light">{content}</p>
  </section>
</header>
